.divide{
	width: 500rpx;
	height: 50rpx;
	padding: 0 6rpx;
	border: 1px solid #FF6000;
	border-radius: 10rpx;
	margin: 20rpx auto;
	font-size: 25rpx;
	font-weight: bolder;
	position: relative;
}
.change{
	background-color: #FF6000;
	color: white;
}
.divide .divActList{
	position: absolute;
	top: 50%;
	width: 50%;
	height: 40rpx;
	margin-top: -20rpx;
	line-height: 40rpx;
	text-align: center;
}
.divide .activiy{
	border-radius: 10rpx 0 0 10rpx;
	left: 10rpx;
}
.divide .list{
	border-radius: 0 10rpx 10rpx 0;
	right: 10rpx;
}

.topThree{
  display: flex;
  flex-direction: row;
  text-align: center;
  justify-content: space-between;
  width: 100%;
}
.topThree>view{
  width: 33.3%;
}
.topThree .imgCon{
  background: url('http://image.yingccn.com/image/599146d5d6c9b64205e1b71f.png') center no-repeat;
  background-size: 66%;
}
.topThree .imgFirst{
  background-image: url('http://image.yingccn.com/image/59914689d6c9b64205e1b71d.png');
}
.topThree .imgThird{
  background-image: url('http://image.yingccn.com/image/599146eed6c9b64205e1b721.png');
}
.topThree .imgCon image{
  width: 130rpx;
  height: 130rpx;
  margin-left: 3rpx;
  border-radius: 50%;
  margin-top: 107rpx;
}
.topThree .imgFirst image{
  width: 150rpx;
  height: 150rpx;
  margin-top: 80rpx;
}
.topName{
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
