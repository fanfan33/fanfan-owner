/* 普通排序 */
.lastList{
  line-height: 100rpx;
  border-top: 1px solid #E5E5E5;
  display: flex; 
  vertical-align:middle; 
  padding: 0 40rpx;
  box-sizing: border-box;
  padding-bottom: 10rpx;
}
.lastList image{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  vertical-align: middle; 
}
.lastList .infoLeft{
  flex: 0.3;
  text-align: center;
}
.lastList .infoCenter{
  flex: 1.6;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.lastList .infoRight{
  flex:0.7;
  color:#FF6000;
  text-align:right;
  padding-right:26rpx;
}
.log-list {
  display: flex;
  flex-direction: column;
   padding: 40rpx; 
}
.log-item {
  margin: 10rpx;
}
.nomsg{
  text-align: center;
  padding-top: 100rpx;
}

/* 自己 */
.myStep{
  margin-top: 30rpx;
  padding: 10rpx 40rpx;
  box-sizing: border-box;
  background-color: #eeeeee;
  border: none; 
  vertical-align: middle;
}

.myStep .myLeft{
  float: left;
  margin-left: 72rpx;
}
.myStep .myCount{
  float: right;
  padding-right: 28rpx;
  margin-top: 18rpx;
  color: #FF6000;
}
.myLeft image{
  width: 90rpx;
  height: 90rpx;
  float: left;
  border-radius: 50%;
  margin-right: 20rpx;
}
.myLeft .myInfo{
  float: left;
  margin-top: 6rpx;
}
.mylistNum{
  font-size: 28rpx;
  color: #aaaaaa;
}
.clear{
  clear: both;
}